<div class="container  ">
  <div class="card mt-3 p-4">
    <%= simple_form_for @question do |f| -%>
      <%= f.input :content, placeholder: 'What...', label: 'Create a question:', error: 'You must ask a question' %>
      <%= f.input :photo, as: :file, label: 'Photo (optional):', required: false %>
      <%= f.submit "Create question", class: "btn btn-blue" %>
    <% end %>
  </div>

</div>
