
<div class="container-index">
  <div class="row borders border-bottom">
    <%# QUESTION %>
    <%= render 'question_info', question: @question %>
    <%# LEAVE AN ANSWER %>
    <%= simple_form_for [@question, @answer], html: {class: "my-3 answer-form" } do |f| %>
      <div class="d-flex w-100" style= "height: 60px">
        <%= f.input :content, label: false, wrapper_html: {class: "w-100 h-100" }%>
        <%= f.button :submit, value: "Leave your Answer", class: "btn btn-blue ml-2", style: "flex-shrink: 0;" %>
      </div>
    <% end %>


    <%# HOW MANY ANSWERS %>
    <div class="answers-header">
      <% if @question.answers.length == 1 %>
        <h5 class="mb-3">1 Answer</h5>
      <% else %>
        <h5 class="mb-3"><%= @question.answers.length %> Answers</h5>
      <% end %>

      <div class="dropdown">
        <button class="btn btn-sort dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
          Sort By
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <li> <%= link_to "Highest Score (default)", question_path(order: 'vote'), class: 'dropdown-item' %></li>
          <li> <%= link_to "Date Created (newest first)", question_path(order: 'datenew'), class: 'dropdown-item' %></li>
          <li> <%= link_to "Date Created (oldest first)", question_path(order: 'dateold'), class: 'dropdown-item' %></li>
        </ul>
      </div>
    </div>

    <%# ANSWERS TO THE QUESTION %>
    <% @answers.each do |answer| %>
        <%= render 'answers/answer_info', answer: answer %>
    <% end %>
</div>
