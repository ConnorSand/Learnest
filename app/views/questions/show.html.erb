<div class="container">
  <%# QUESTION %>
  <%= render 'question_info', question: @question %>
  <%# ANSWERS TO THE QUESTION %>
  <% @question.answers.each do |answer| %>
    <%= render 'answers/answer_info', answer: answer %>
  <% end %>
</div>

<div class="container">
<%= simple_form_for [@question, @answer] do |f| %>
    <%= f.input :content %>
    <%= f.submit "Leave your Answer", class: "btn btn-blue btn-lg" %>
  <% end %> 
</div>
  